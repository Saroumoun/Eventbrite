<div class="container-fluid d-flex justify-content-center">
	<div class="card mt-3" style="max-width: 700px;">
	  <div class="row no-gutters">
	    <div class="col-md-6 p-2">
	    	<%if @user.profil_picture.attached?%>
  				<%= image_tag @user.profil_picture.variant(resize: '100x150'), alt: 'profil_picture' %>
			<%else%>
				<i class="fas fa-portrait fa-7x mx-auto"></i>  
			<%end%>	      
	    </div>
	    <div class="col-md-6">
	      <div class="card-body">
	        <h5 class="card-title"><%= @user.first_name %> <%= @user.last_name %></h5>
	        <p class="card-text"><%= @user.description %></p>
	        <p class="card-text"><small class="text-muted"><%= @user.email %></small></p>
	      </div>
	    </div>
	  </div>
	  <%= link_to "Edit password or email", edit_user_registration_path, :class => "btn btn-secondary ml-2 mr-2 mb-2"%>
	  <%= link_to "Edit other informations", edit_user_path, :class => "btn btn-secondary ml-2 mr-2 mb-2"%>
	</div>
</div>


<div class="row mt-3">
	<% @user.events.each do |event| %>
		<div class="card mx-auto mb-1" style="width: 50rem;">
		  <div class="card-body">
		  <h5 class="card-title"><%= event.title %></h5>
		  <p class="card-text"><%= event.description %></p>
		  <p class="card-text"><small class="text-muted"><%= event.start_date.strftime("%Y/%m/%d") %></small></p>
		  <%= link_to "Show event", event_path(event.id), :class => "btn btn-secondary"%>
		  </div>
		</div>
	<% end %>
</div>