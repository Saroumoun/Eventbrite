<% if flash[:danger]%>
  <div class="alert alert-danger mt-3" role="alert">
   <div class="notice"> 
     <%=flash[:danger] %> 
   </div>
  </div>
<% end %> 

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Welcome on Evenbrite-thp</h1>
    <p class="lead">How to create an event using our new event creation experience</p>
    <%= link_to "Create event", new_event_path, :class => "btn btn-info"%>
  </div>
</div>

<div class="row mt-3">
	<% @events.each do |event| %>
		<div class="card mx-auto mb-5" style="width: 18rem;">
		  <div class="card-body">
		    <h5 class="card-title"><%= event.title %></h5>
		    <p class="card-text">by <%= event.admin.first_name %> <%= event.admin.last_name %></p>
		    <%= link_to "Show event", event_path(event.id), :class => "btn btn-secondary"%>
		</div>
	</div>
	<% end %>
</div>

