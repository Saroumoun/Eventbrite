<% if @event.errors.any? %>
  <div class="alert alert-danger mt-3" role="alert">
    <p>Event creation process failed due to:</p>
      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class= "container-fluid">
	<%= form_tag url_for(action: 'update'), method: "patch" do %>
		<div id="event">
			<%= text_field_tag 'title', @event.title, class: 'form-control mt-3' %>
			<%= datetime_field_tag 'start_date', @event.start_date, class: 'form-control mt-1' %>
			<%= number_field_tag 'duration', @event.duration, class: 'form-control mt-1' %>
			<%= text_area_tag 'description', @event.description, class: 'form-control mt-1' %>
			<%= number_field_tag 'price', @event.price, class: 'form-control mt-1' %>
			<%= text_field_tag 'location', @event.location, class: 'form-control mt-1' %>
			<%= submit_tag "Update", class: "btn btn-secondary mt-1" %>
		</div>
	<% end %>
</div>