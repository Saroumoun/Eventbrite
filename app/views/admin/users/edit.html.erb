<% if @user.errors.any? %>
  <div class="alert alert-danger mt-3" role="alert">
    <p>User update process failed due to:</p>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class= "container-fluid">
	<%= form_tag url_for(action: 'update'), method: "patch" do %>
		<div id="user">
			<%= text_field_tag 'first_name', @user.first_name, class: 'form-control mt-3', placeholder: 'First name'%>
			<%= text_field_tag 'last_name', @user.last_name, class: 'form-control mt-1', placeholder: 'Last name' %>
			<%= text_area_tag 'description', @user.description, class: 'form-control mt-1', placeholder: 'Description' %>
			<% unless @user.is_admin %>
			<div class="checkbox mt-1">
				<label>Make admin : <%= check_box_tag 'is_admin', value = "1", checked = false %></label>
			</div>
			<% end %>

			<%= submit_tag "Update user's information", class: "btn btn-secondary mt-1" %>
		</div>
	<% end %>
</div>